<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dimen_150"
        android:background="@drawable/gradien_color01"
        android:paddingTop="@dimen/margin_padding_20"
        android:paddingBottom="@dimen/margin_padding_20">

        <ImageView
            android:id="@+id/logorri"
            android:layout_width="120sp"
            android:layout_height="80sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="ikon" />

        <TextView
            android:id="@+id/judul01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logorri"
            android:text="Simpeg RRI "
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul01"
            android:layout_toRightOf="@id/logorri"
            android:layout_marginEnd="@dimen/margin_padding_20"
            android:lines="2"
            android:text="sistem informasi mobile kepegawaian terintegrasi"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:background="@drawable/gradien_color02">

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:inputType="text"
            android:backgroundTint="@android:color/black"
            android:hint="Username"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="24dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/black"
            android:hint="Password"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/latlong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"/>

        <Button
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass"
            android:layout_marginStart="@dimen/margin_padding_30"
            android:layout_marginTop="@dimen/size_dimen_35"
            android:layout_marginEnd="@dimen/margin_padding_30"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="sign in" />

        <Button
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signin"
            android:layout_marginStart="@dimen/margin_padding_30"
            android:layout_marginTop="@dimen/margin_padding_10"
            android:layout_marginEnd="@dimen/margin_padding_30"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="barcode" />

    </RelativeLayout>

                <!--android:src="@drawable/no_photo"-->
                <!--app:civ_border_color="@color/cardview_light_background"-->
                <!--app:civ_border_width="2dp" />-->
            <ImageView
                android:id="@+id/fotoPegawai"
                android:layout_width="@dimen/size_90"
                android:layout_height="@dimen/size_90"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TableLayout
            android:id="@+id/tabelPeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin">

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Nama"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:layout_marginRight="@dimen/margin_padding_10"
                    android:text=":" />
                <TextView
                    android:id="@+id/namaPegawai"
                    android:layout_column="3" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="NIP"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":"/>
                <TextView
                    android:id="@+id/idPegawai"
                    android:layout_column="3" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Tgl.Lahir"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":" />
                <TextView
                    android:id="@+id/tgLahir"
                    android:layout_column="3"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Tmp.Lahir"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":" />
                <TextView
                    android:id="@+id/tmLahir"
                    android:layout_column="3"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Alamat"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":" />
                <TextView
                    android:id="@+id/alamatPegawai"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingEnd="@dimen/size_dimen_100"
                    android:gravity="left"
                    android:layout_column="3"
                    android:maxLines="5"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Satuan Kerja"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":" />
                <TextView
                    android:id="@+id/satker"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingEnd="@dimen/size_dimen_100"
                    android:layout_column="3"
                    android:gravity="left"
                    android:maxLines="10"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Gol.Ruang"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":"/>
                <TextView
                    android:id="@+id/golRuang"
                    android:layout_column="3"/>
            </TableRow>
            <!--<TableRow>-->
                <!--<TextView-->
                    <!--android:layout_column="1"-->
                    <!--android:layout_marginLeft="@dimen/margin_padding_10"-->
                    <!--android:text="TMT CPNS"-->
                    <!--android:textStyle="bold" />-->
                <!--<TextView-->
                    <!--android:layout_column="2"-->
                    <!--android:text=":"/>-->
                <!--<TextView-->
                    <!--android:id="@+id/tmtCpns"-->

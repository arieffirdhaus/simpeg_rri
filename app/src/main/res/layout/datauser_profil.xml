                    <!--android:text="TMT PNS"-->
                    <!--android:textStyle="bold" />-->
                <!--<TextView-->
                    <!--android:layout_column="2"-->
                    <!--android:text=":"/>-->
                <!--<TextView-->
                    <!--android:id="@+id/tmtPns"-->
                    <!--android:layout_column="3" />-->
            <!--</TableRow>-->
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="No.KARPEG"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:text=":" />
                <TextView
                    android:id="@+id/no_karpeg"
                    android:layout_column="3"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Nama"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:layout_marginRight="@dimen/margin_padding_10"
                        android:text=":" />
                    <TextView
                        android:id="@+id/namaIbu"
                        android:layout_column="3" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Tempat Lahir"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:text=":" />
                    <TextView
                        android:id="@+id/tmLahirIbu"
                        android:layout_column="3"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Tanggal Lahir"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:text=":" />
                    <TextView
                        android:id="@+id/tgLahirIbu"
                        android:layout_column="3"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Pekerjaan"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/kerjaIbu"
                        android:layout_column="3" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Alamat"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:text=":" />
                    <TextView
                        android:id="@+id/alamatIbu"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingEnd="@dimen/size_dimen_100"
                        android:gravity="left"
                        android:layout_column="3"
                        android:maxLines="5"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Kode Pos"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:text=":" />
                    <TextView
                        android:id="@+id/kodeposIbu"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingEnd="@dimen/size_dimen_100"
                        android:layout_column="3"
                        android:gravity="left"
                        android:maxLines="10"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_padding_10"
                        android:text="Telepon"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="2"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/telpIbu"
                        android:layout_column="3"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
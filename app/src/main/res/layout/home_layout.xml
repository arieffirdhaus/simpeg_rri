<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_30"
        android:layout_marginStart="@dimen/margin_padding_20"
        android:layout_marginEnd="@dimen/margin_padding_20"
        app:cardElevation="@dimen/margin_padding_5"
        app:cardCornerRadius="@dimen/margin_padding_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/selamatdatang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="@dimen/margin_padding_10"
                android:layout_marginBottom="@dimen/margin_padding_10"
                android:background="@drawable/gradien_color03"
                android:text="Selamat Datang"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/selamatdatang01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/selamatdatang"
                android:text="@string/selamat_datang_01" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margin_padding_10"
                android:paddingBottom="@dimen/margin_padding_20"
                android:layout_below="@id/selamatdatang01"
                android:maxLines="3"
                android:text="@string/selamat_datang_02" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_20"
        android:layout_marginStart="@dimen/margin_padding_20"
        android:layout_marginEnd="@dimen/margin_padding_20"
        android:layout_below="@id/card_welcome"
        app:cardElevation="@dimen/margin_padding_5"
        app:cardCornerRadius="@dimen/margin_padding_5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/margin_padding_10"
            android:layout_marginBottom="@dimen/margin_padding_10"
            android:background="@drawable/gradien_color03"
            android:text="Flash News"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/textView1" />
        <TableLayout
            android:id="@+id/tabelPeg"
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:elevation="@dimen/size_dimen_35">
            <TableRow >
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Presensi In/Out"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:layout_marginRight="@dimen/margin_padding_10"
                    android:text=":" />
                <TextView
                    android:id="@+id/presensi"
                    android:layout_column="3" />
            </TableRow>
            <TableRow android:paddingTop="10dp">
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Sisa Cuti Pegawai"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:layout_marginRight="@dimen/margin_padding_10"
                    android:text=":" />
                <TextView
                    android:id="@+id/cuti"
                    android:layout_column="3" />
            </TableRow>
            <TableRow android:paddingTop="10dp">
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Nilai SKP"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:layout_marginRight="@dimen/margin_padding_10"
                    android:text=":" />
                <TextView
                    android:id="@+id/skp"
                    android:layout_column="3" />
            </TableRow>
            <TableRow android:paddingTop="10dp">
                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="@dimen/margin_padding_10"
                    android:text="Jumlah Doc Pegawai"
                    android:textStyle="bold" />
                <TextView
                    android:layout_column="2"
                    android:layout_marginRight="@dimen/margin_padding_10"
                    android:text=":" />
                <TextView
                    android:id="@+id/doc"
                    android:layout_column="3" />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
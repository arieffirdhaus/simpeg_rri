<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_10">
    <RelativeLayout
        android:id="@+id/relatif_tampilan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded_corners"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dimen_25"
            app:srcCompat="@drawable/gradien_color01"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textRi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_10"
            android:layout_below="@+id/imageview"
            android:gravity="center"
            android:text="Kepangkatan"/>
    </RelativeLayout>
 </RelativeLayout>